{
  "name": "{{{packageName}}}",
  "version": "{{{lowerCase packageVersion}}}",
{{#if packageAuthor}}
  "author": {
    "name": "{{{packageAuthor}}}",
    "url": "https://github.com/{{{packageAuthor}}}/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/{{{packageAuthor}}}/{{{projectName}}}.git"
  },
{{#if isLernaProject}}
  "homepage": "https://github.com/{{{packageAuthor}}}/{{{projectName}}}/tree/master/{{{packageLocation}}}#readme",
{{else}}
  "homepage": "https://github.com/{{{packageAuthor}}}/{{{projectName}}}#readme",
{{/if}}
{{/if}}
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types/index.d.ts",
  "source": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">= 14.15.0"
  },
  "files": [
    "lib/",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "package.json",
    "!lib/**/*.js.map",
    "!lib/**/*.d.ts.map"
  ],
  "scripts": {
    "start": "rollup -w -c rollup.config.js",
    "prebuild": "rimraf lib/",
    "build": "cross-env NODE_ENV=production rollup -c rollup.config.js",
    "prepublishOnly": "cross-env ROLLUP_USE_SOURCE_MAP=false yarn build",
    "lint:fix": "eslint '{src,__test__}/**/*.{ts,tsx}' --fix",
    "test": "cross-env TS_NODE_FILES=true jest --config ../../jest.config.js --rootDir .",
    "test:coverage": "cross-env TS_NODE_FILES=true jest --config ../../jest.config.js --rootDir . --coverage",
    "answer": "node -r ts-node/register -r tsconfig-paths/register __test__/answer.ts"
  },
  "dependencies": {
    "@yozora/character": "^{{{lowerCase packageVersion}}}",
    "@yozora/tokenizercore": "^{{{lowerCase packageVersion}}}"{{#if isBlockTokenizer}},
    "@yozora/tokenizercore-block": "^{{{lowerCase packageVersion}}}"
{{/if}}{{#if isInlineTokenizer}},
    "@yozora/tokenizercore-inline": "^{{{lowerCase packageVersion}}}"
{{/if}}
  },
  "devDependencies": {
    "@barusu/rollup-config": "0.0.44",
    "@yozora/eslint-config": "^0.0.0",
    "@yozora/jest-for-tokenizer": "^{{{lowerCase packageVersion}}}",
    "rollup": "2.35.1"
  }
}
