{
  "name": "@yozora/yozora",
  "version": "0.0.0",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/yozora.git"
  },
  "homepage": "https://github.com/guanghechen/yozora/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn format && yarn test && lerna publish",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-s format:find-inconsistent format:lint:fix format:prettier",
    "format:prettier": "prettier --write .",
    "format:find-inconsistent": "barusu-find-inconsistent .",
    "format:lint:fix": "eslint . --fix",
    "new:tokenizer": "node ./node_modules/@yozora/template-tokenizer/cli.js",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "run-s clean build",
    "test": "lerna run test --parallel",
    "test:coverage": "lerna run test --parallel -- --coverage",
    "test:parser": "lerna run test --parallel --scope @yozora/parser-*",
    "test:tokenizer": "lerna run test --parallel --scope @yozora/parser-*",
    "update:changelog": "gitmoji-changelog update",
    "update:test": "lerna run update:test --parallel",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*",
    "scaffolds/*",
    "tokenizers/*"
  ],
  "devDependencies": {
    "@barusu/tool-find-inconsistent": "0.0.47",
    "@guanghechen/rollup-config": "1.0.0",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "26.0.19",
    "@types/node": "^13.13.30",
    "cross-env": "~7.0.2",
    "fs-extra": "^9.0.0",
    "gitmoji-changelog": "^2.2.0",
    "husky": "^5.0.9",
    "is-ci": "^3.0.0",
    "jest": "26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.6",
    "plop": "^2.6.0",
    "rimraf": "~3.0.2",
    "rollup": "2.39.1",
    "ts-jest": "26.4.4",
    "ts-node": "~9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~4.1.5",
    "yarn-deduplicate": "^3.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx}": [
      "prettier --write"
    ]
  }
}
