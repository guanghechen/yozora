{
  "name": "@yozora/yozora",
  "version": "0.0.0",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/yozora.git"
  },
  "homepage": "https://github.com/guanghechen/yozora/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn format && yarn test && lerna publish",
    "build": "lerna run build --concurrency 1",
    "clean": "lerna clean --yes && yarn install",
    "format": "run-p format:**",
    "format:find-inconsistent": "barusu-find-inconsistent .",
    "format:lint:fix": "eslint . --fix",
    "format:sort-imports": "barusu-sort-imports .",
    "new:tokenizer": "node ./node_modules/@yozora/template-tokenizer/cli.js",
    "prepublishOnly": "pinst --disable",
    "postinstall": "run-p postinstall:**",
    "postinstall:main": "yarn update:lock",
    "postinstall:dev": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "rebuild": "yarn clean && yarn build",
    "test": "lerna run test --parallel",
    "test:coverage": "lerna run test:coverage --parallel",
    "test:parser": "lerna run test --parallel --scope @yozora/parser-*",
    "test:tokenizer": "lerna run test --parallel --scope @yozora/parser-*",
    "update:changelog": "gitmoji-changelog update",
    "update:test": "lerna run answer --parallel",
    "update:lock": "yarn-deduplicate"
  },
  "workspaces": [
    "packages/*",
    "scaffolds/*",
    "tokenizers/*"
  ],
  "devDependencies": {
    "@barusu/tool-find-inconsistent": "0.0.46",
    "@barusu/tool-sort-imports": "0.0.46",
    "@types/jest": "26.0.19",
    "@types/node": "^13.13.30",
    "cross-env": "~7.0.2",
    "gitmoji-changelog": "^2.2.0",
    "husky": "^5.0.9",
    "is-ci": "^3.0.0",
    "jest": "26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.6",
    "plop": "^2.6.0",
    "rimraf": "~3.0.2",
    "ts-jest": "26.4.4",
    "ts-node": "~9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~4.1.5",
    "yarn-deduplicate": "^3.1.0"
  },
  "@barusu/tool-sort-imports": {
    "logLevel": "verbose",
    "pattern": [
      "packages/*/{src,__test__}/**/*.{ts,tsx}",
      "scaffolds/*/{src,__test__}/**/*.{ts,tsx}",
      "tokenizers/*/{src,__test__}/**/*.{ts,tsx}",
      "!**/{test,__test__}/cases",
      "!**/node_modules/"
    ],
    "moduleRanks": [
      {
        "regex": "^(react|vue|angular)(?:[/\\-][\\w\\-./]*)?$",
        "rank": 1.1
      },
      {
        "regex": "^[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.2
      },
      {
        "regex": "^@[a-zA-Z\\d][\\w\\-.]*\\/[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.3
      },
      {
        "regex": "^@\\/",
        "rank": 2.1
      },
      {
        "regex": "^(?:\\/|[a-zA-Z]:)",
        "rank": 3.1
      },
      {
        "regex": "^[.]{2}[\\/\\\\][^\\n]*",
        "rank": 3.2
      },
      {
        "regex": "^[.][\\/\\\\][^\\n]*",
        "rank": 3.3
      }
    ],
    "indent": "  ",
    "quote": "'",
    "semicolon": false,
    "maxColumn": 80,
    "blankLinesAfterStatement": 1
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdx}": [
      "prettier --write"
    ]
  }
}
