{
  "name": "@yozora/yozora",
  "version": "0.0.0",
  "author": {
    "name": "lemon-clown",
    "url": "https://github.com/lemon-clown/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lemon-clown/yozora.git"
  },
  "homepage": "https://github.com/lemon-clown/yozora/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 12.16.0"
  },
  "scripts": {
    "pre:publish": "yarn find-inconsistent && yarn sort-imports",
    ":publish": "lerna publish",
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --concurrency 1 -- 'echo && pwd && yarn build'",
    "lint:fix": "lerna exec --concurrency 1 -- 'echo && pwd && yarn lint:fix'",
    "clean": "lerna clean --yes && yarn install",
    "rebuild": "lerna exec -- 'rimraf lib/' && yarn build",
    "test:tokenizer": "lerna exec --scope '@yozora/tokenizer-*' --concurrency 1 -- 'echo && pwd && yarn test'",
    "new:tokenizer": "node ./node_modules/@yozora/template-tokenizer/cli.js",
    "find-inconsistent": "node ./node_modules/@barusu/tool-find-inconsistent-packages/lib/cjs/cli.js --log-level=verbose",
    "sort-imports": "node ./node_modules/@barusu/tool-sort-imports/lib/cjs/cli.js . --log-level=verbose"
  },
  "workspaces": [
    "packages/*",
    "scaffolds/*",
    "tokenizers/_core",
    "tokenizers/block/*",
    "tokenizers/inline/*"
  ],
  "devDependencies": {
    "@barusu/tool-find-inconsistent-packages": "^0.0.14",
    "@barusu/tool-sort-imports": "^0.0.14",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.7.6",
    "@yozora/template-tokenizer": "^0.0.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.0",
    "mocha": "^7.1.1",
    "plop": "^2.6.0",
    "rimraf": "^3.0.2",
    "lerna": "^3.20.2",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.2"
  },
  "@barusu/tool-sort-imports": {
    "pattern": [
      "packages/**/src/**/*.{ts,tsx}",
      "packages/**/test/**/*.{ts,tsx}",
      "scaffolds/**/src/**/*.{ts,tsx}",
      "scaffolds/**/test/**/*.{ts,tsx}",
      "tokenizers/**/src/**/*.{ts,tsx}",
      "tokenizers/**/test/**/*.{ts,tsx}"
    ],
    "topModule": [
      "react",
      "vue",
      "fs",
      "fs-extra",
      "path",
      "glob",
      "mocha",
      "chai"
    ],
    "indent": "  ",
    "quote": "'",
    "maxColumn": 80
  }
}
