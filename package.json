{
  "name": "@yozora/yozora",
  "version": "0.0.0",
  "author": {
    "name": "guanghechen",
    "url": "https://github.com/guanghechen/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guanghechen/yozora.git"
  },
  "homepage": "https://github.com/guanghechen/yozora/#readme",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    ":publish": "yarn format && yarn test && lerna publish --no-private",
    "start": "lerna run --parallel start",
    "build": "lerna run --concurrency 1 build",
    "lint:fix": "lerna exec --concurrency 1 -- 'echo && pwd && yarn lint:fix'",
    "rebuild": "yarn clean && yarn build",
    "test": "lerna run --parallel test",
    "clean": "lerna clean --yes && yarn install",
    "format": "yarn find-inconsistent && yarn sort-imports && yarn lint:fix",
    "find-inconsistent": "barusu-find-inconsistent .",
    "sort-imports": "barusu-sort-imports .",
    "test:tokenizer": "lerna run --parallel test --scope '@yozora/tokenizer-*'",
    "new:tokenizer": "node ./node_modules/@yozora/template-tokenizer/cli.js"
  },
  "workspaces": [
    "packages/*",
    "scaffolds/*",
    "tokenizers/*"
  ],
  "devDependencies": {
    "@barusu/tool-find-inconsistent": "^0.0.43",
    "@barusu/tool-sort-imports": "^0.0.43",
    "@types/chai": "^4.2.11",
    "@types/jest": "26.0.19",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.30",
    "chai": "^4.2.0",
    "cross-env": "~7.0.2",
    "lerna": "3.22.1",
    "jest": "26.6.3",
    "mocha": "^7.1.1",
    "nyc": "^15.1.0",
    "plop": "^2.6.0",
    "rimraf": "~3.0.2",
    "ts-jest": "26.4.4",
    "ts-node": "~9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~4.1.3"
  },
  "@barusu/tool-sort-imports": {
    "logLevel": "verbose",
    "pattern": [
      "packages/*/{src,test,__test__}/**/*.{ts,tsx}",
      "scaffolds/*/{src,test,__test__}/**/*.{ts,tsx}",
      "tokenizers/*/{src,test,__test__}/**/*.{ts,tsx}",
      "!**/{test,__test__}/cases",
      "!**/node_modules/"
    ],
    "moduleRanks": [
      {
        "regex": "^(react|vue|angular)(?:[/\\-][\\w\\-./]*)?$",
        "rank": 1.1
      },
      {
        "regex": "^mocha|chai(?:[/][\\w\\-./]*)?$",
        "rank": 1.2
      },
      {
        "regex": "^[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.3
      },
      {
        "regex": "^@[a-zA-Z\\d][\\w\\-.]*\\/[a-zA-Z\\d][\\w\\-.]*",
        "rank": 1.4
      },
      {
        "regex": "^@\\/",
        "rank": 2.1
      },
      {
        "regex": "^(?:\\/|[a-zA-Z]:)",
        "rank": 3.1
      },
      {
        "regex": "^[.]{2}[\\/\\\\][^\\n]*",
        "rank": 3.2
      },
      {
        "regex": "^[.][\\/\\\\][^\\n]*",
        "rank": 3.3
      }
    ],
    "indent": "  ",
    "quote": "'",
    "semicolon": false,
    "maxColumn": 80
  }
}
