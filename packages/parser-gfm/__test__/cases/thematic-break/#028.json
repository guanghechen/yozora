{
  "title": "GFM#28 https://github.github.com/gfm/#example-28",
  "cases": [
    {
      "description": "Thematic breaks can interrupt a paragraph",
      "input": "Foo\n***\nbar",
      "htmlAnswer": "<p>Foo</p>\n<hr />\n<p>bar</p>",
      "parseAnswer": {
        "type": "root",
        "meta": {},
        "children": [
          {
            "type": "paragraph",
            "children": [
              {
                "type": "phrasingContent",
                "contents": [
                  {
                    "type": "text",
                    "value": "Foo"
                  }
                ]
              }
            ]
          },
          {
            "type": "thematicBreak"
          },
          {
            "type": "paragraph",
            "children": [
              {
                "type": "phrasingContent",
                "contents": [
                  {
                    "type": "text",
                    "value": "bar"
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}